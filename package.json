{
  "name": "@yamakox/vue3-plotly",
  "version": "0.2.4",
  "description": "A Vue 3 wrapper component for Plotly.js",
  "author": "yamakox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamakox/vue3-plotly.git"
  },
  "keywords": [
    "vue",
    "plotly",
    "chart",
    "graph",
    "visualization"
  ],
  "homepage": "https://github.com/yamakox/vue3-plotly",
  "bugs": {
    "url": "https://github.com/yamakox/vue3-plotly/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "rimraf dist && npm run build",
    "build": "vite build && npm run build:types",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist"
  },
  "peerDependencies": {
    "plotly.js-dist-min": "^3.0.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/plotly.js": "^3.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.0",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-vue": "^10.4.0",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.9.0",
    "vite": "^7.1.0",
    "vue": "^3.5.0",
    "vue-tsc": "^3.0.0"
  }
}
